---
import { css } from "../../styled-system/css";

import Navigation from "./Navigation.astro";
---

<header
    class={css({
        display: "flex",
        alignItems: "center",
        justifyContent: "space-between",
        padding: "0 1rem",
        height: "4rem",
        fontSize: "2rem",
        fontWeight: "bold",
        boxShadow: "0 0 0.5rem rgba(0, 0, 0, 0.5)",
        zIndex: 1,
        position: "sticky",
        background: "linear-gradient(90deg, #cdffd9, #95baff)",
    })}
>
    <a
        href="/"
        class={css({
            display: "flex",
            alignItems: "center",
            gap: "1rem",
            letterSpacing: "0",
        })}
    >
        <img src="/dango.png" alt="icon" width="40px" />
        <span> こたのお考え</span>
    </a>

    <Navigation />
</header>
