---
import Base from "@/layouts/base.astro";

import { getGalleries } from "@/lib/gallery";
import { InstagramEmbedComponent } from "@/components/instagram";

const galleries = await getGalleries();
---

<Base pageTitle="Gallery">
    <div
        class="flex flex-col sm:flex-row justify-center items-center gap-3 flex-wrap"
    >
        {
            galleries.map((gallery) => (
                <InstagramEmbedComponent client:load postId={gallery.postId} />
            ))
        }
    </div>
</Base>
